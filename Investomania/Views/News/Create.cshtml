
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Themes/ckeditor.js"></script>
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<script>
    CKEDITOR.replace("FullDescription");
</script>
<br />
<div class="body-content">
    <form style="width:100%" >
    
        <div class="row">
            <div class="col-md-2">
                <div class="form-group">
                    <label>Title</label>
                </div>
            </div>
            <div class="col-md-10">
                <div class="form-group">
                    <input class="form-control" placeholder="Enter Your Title" />

                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-2">
                <div class="form-group">
                    <label>Content</label>
                </div>
            </div>
            <div class="col-md-10">
                <div class="form-group">
                    <textarea id="FullDescription" placeholder="Enter Content"></textarea>
                    <script type="text/javascript">
                        CKEDITOR.replace('FullDescription');
                    </script>
                </div>
            </div>
        </div>

    
    
</form>
    </div>
